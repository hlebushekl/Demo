            <Label Content="Авторизация" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border BorderThickness="1" Margin="258,202,100,35" Background="#67BA80" CornerRadius="15,15,15,15" MouseLeftButtonUp="Border_MouseLeftButtonUp_1">
